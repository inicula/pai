arr = [-77, 100, 50, 50, 50, 1, 2, 7, 3, 5, 1];
n = len $ arr;

ok = [];
i = 0;
while i < n {
    ok = ok + [1];
    i = i + 1;
}

times = 0;
while times < n {
    min = 99999999;
    min_idx = -1;

    i = 0;
    while i < n {
        if ok[i] {
            if min > arr[i] {
                min = arr[i];
                min_idx = i;
            }
        }

        i = i + 1;
    }

    min;

    new_ok = [];
    i = 0;
    while i < n {
        if i == min_idx || !ok[i] {
            new_ok = new_ok + [0];
        } else {
            new_ok = new_ok + [1];
        }

        i = i + 1;
    }

    ok = new_ok;
    times = times + 1;
}
